@model Shoppia.Models.Product

@{
    ViewData["Title"] = "Product Details";
}

<div class="container py-4">
    <a asp-action="Index" class="btn btn-link mb-3">&laquo; Back to Products</a>

    <div class="row g-4">
        <div class="col-md-5">
            <div class="border rounded-3 p-3 bg-light text-center">
                @if (!string.IsNullOrEmpty(Model.Photo))
                {
                    <img src="~/images/@Model.Photo" class="img-fluid" alt="@Model.Name" />
                }
                else
                {
                    <span class="text-muted">No image available</span>
                }
            </div>
        </div>

        <div class="col-md-7">
            <h1 class="h3 mb-3">@Model.Name</h1>

            <p class="text-muted mb-1">
                Category: @Model.Category?.Name
            </p>

            <p class="h4 fw-bold mb-3">
                $@Model.Price
            </p>

            <p class="mb-2">
                In stock: @Model.StockQuantity
            </p>

            <div class="mt-3">
                <button class="btn btn-primary me-2">Add to cart</button>
                <a asp-action="Edit"
                   asp-route-id="@Model.ProductId"
                   class="btn btn-outline-secondary">
                    Edit product
                </a>
            </div>
        </div>
    </div>
</div>
