@model Shoppia.Models.Order

@{
    ViewData["Title"] = "Order Details";
}

<div class="container py-4">
    <a asp-action="Index" class="btn btn-link mb-3">&laquo; Back to Orders</a>

    <div class="card border-0 shadow-sm">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">Order #@Model.OrderId</h4>
        </div>
        <div class="card-body">
            <div class="row mb-4">
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4">Client</dt>
                        <dd class="col-sm-8">@Model.Client?.Name</dd>
                        
                        <dt class="col-sm-4">Order Date</dt>
                        <dd class="col-sm-8">@Model.OrderDate.ToShortDateString()</dd>
                        
                        <dt class="col-sm-4">Status</dt>
                        <dd class="col-sm-8">
                            <span class="badge bg-info">@Model.OrderStatus?.Name</span>
                        </dd>
                    </dl>
                </div>
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4">Total Amount</dt>
                        <dd class="col-sm-8"><strong>$@Model.TotalAmount</strong></dd>
                    </dl>
                </div>
            </div>

            @if (Model.OrderItems != null && Model.OrderItems.Any())
            {
                <h5 class="mt-4 mb-3">Order Items</h5>
                <div class="table-responsive">
                    <table class="table table-bordered">
                        <thead class="table-light">
                            <tr>
                                <th>Product</th>
                                <th class="text-center">Quantity</th>
                                <th class="text-end">Unit Price</th>
                                <th class="text-end">Subtotal</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.OrderItems)
                            {
                                <tr>
                                    <td>@item.Product?.Name</td>
                                    <td class="text-center">@item.Quantity</td>
                                    <td class="text-end">$@item.Price</td>
                                    <td class="text-end">$@(item.Quantity * item.Price)</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info mt-3">
                    No items in this order yet.
                </div>
            }

            <div class="mt-4">
                <a asp-action="Edit" asp-route-id="@Model.OrderId" class="btn btn-warning">Edit Order</a>
                <a asp-action="Delete" asp-route-id="@Model.OrderId" class="btn btn-outline-danger">Delete Order</a>
            </div>
        </div>
    </div>
</div>
