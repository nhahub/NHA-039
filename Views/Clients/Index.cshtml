@model IEnumerable<Shoppia.Models.Client>

@{
    ViewData["Title"] = "Clients";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="h3 mb-0">Clients</h1>
        <a asp-action="Create" class="btn btn-primary">
            + Add New Client
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            There are no clients yet.
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped align-middle">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Mobile</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var client in Model)
                    {
                        <tr>
                            <td>@client.ClientId</td>
                            <td>@client.Name</td>
                            <td>@client.Mobile</td>
                            <td class="text-end">
                                <a asp-action="Details" asp-route-id="@client.ClientId" class="btn btn-sm btn-outline-secondary">Details</a>
                                <a asp-action="Edit" asp-route-id="@client.ClientId" class="btn btn-sm btn-outline-primary">Edit</a>
                                <a asp-action="Delete" asp-route-id="@client.ClientId" class="btn btn-sm btn-outline-danger">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>
