@{
    ViewData["Title"] = "Account Locked";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-body text-center">
                <h2 class="text-danger">@ViewData["Title"]</h2>
                <p class="mt-3">Your account has been locked due to multiple failed login attempts.</p>
                <p>Please try again in a few minutes.</p>
                <a asp-action="Login" class="btn btn-primary mt-3">Back to Login</a>
            </div>
        </div>
    </div>
</div>
